---
interface Props {
  title: string;
  description: string;
  image?: string; // Optionales Bild f√ºr die Karte
}

const { title, description, image } = Astro.props;
---

<div class="card">
  {image && <img src={image} alt={title} class="card-image" />}
  <div class="card-content">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
</div>

<style>
  .card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgb(0 0 0 / 10%);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    max-width: 100%;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgb(0 0 0 / 20%);
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .card-content {
    padding: 1.25em;
    text-align: center;
  }

  .card h2 {
    margin: 0 0 0.5em;
    font-size: 22px;
    color: #333;
  }

  .card p {
    margin: 0;
    font-size: 14px;
    color: #666;
  }
</style>
