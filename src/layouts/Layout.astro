---
// src/layouts/Layout.astro
const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description} />
  <title>{title}</title>
  <style>
    body {
      background: #f5f8f9; 
      color: #000; 
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }
    
    header {
      display: flex;
      justify-content: flex-start; 
      align-items: center;
      background: #fff; 
      padding: 1rem;
      color: #000;
      box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    }

    header .logo {
      font-size: 24px;
      font-weight: bold;
      color: #198be8;
    }

    .options-bar {
      background: #eaf9f8;
      padding: 0.5rem 0; 
      width: 100%; 
      display: flex;
      justify-content: center;
      gap: 1rem; 
      margin: 0; 
      border-radius: 8px;
      box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    }
    
    .options-bar a {
      padding: 0.5rem 1rem;
      background: linear-gradient(to right, #f8d7da, #f8edeb);
      color: #000;
      border: none;
      border-radius: 8px;
      text-decoration: none;
      font-size: 14px;
      transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    }

    .options-bar a:hover {
      background: linear-gradient(to right, #d5abaf, #f5e4e6);
      transform: translateY(-2px);
    }

    .options-bar a:active {
      transform: translateY(0);
    }

    .options-bar a:focus {
      outline: 2px solid #000;
      outline-offset: 2px;
    }
    
    footer {
      background: #fffafa;
      color: #0a0909;
      padding: 0.1rem;
      text-align: center;
      position: fixed;
      bottom: 0;
      width: 100%;
    }
    
    main {
      padding: 2rem;
      max-width: 2000px;
      margin: auto;
      border-radius: 10px;
      background: rgb(190 220 220 / 80%); 
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">feedbacksystem</div>
  </header>
  <div class="options-bar">
    <slot name="options" />
  </div>
  <main>
    <slot />
  </main>
  <footer>
    Â© 2024 Your Company
  </footer>
</body>
</html>
