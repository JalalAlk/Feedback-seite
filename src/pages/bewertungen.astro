---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bewertungen" description="Geben Sie hier Ihre Bewertungen für verschiedene Aspekte der Hochschule ab.">
  <main>
    <h1>Bewertungen abgeben</h1>
    <form id="review-form">
      <!-- Auswahlfeld für die Kategorie -->
      <label for="review-category">Kategorie:</label>
      <select id="review-category" required>
        <option value="" disabled selected>Bitte wählen Sie eine Kategorie</option>
        <option value="Bibliothek">Bibliothek</option>
        <option value="Messe">Messe</option>
        <option value="Lehrsystem">Lehrsystem</option>
        <option value="Vorlesungen">Vorlesungen</option>
        <option value="Professoren">Professoren</option>
        <option value="Hochschulräume">Hochschulräume</option>
        <option value="Sonstiges">Sonstiges</option>
      </select>
      <label for="review-subcategory" id="review-subcategory-label" style="display: none;">Unterkategorie:</label>
      <select id="review-subcategory" style="display: none;" required>
        <!-- Optionen für Sub-Kategorien werden hier dynamisch hinzugefügt -->
      </select>
      <label for="review-message">Ihre Bewertung:</label>
      <textarea id="review-message" rows="5" placeholder="Ihre Bewertung" required></textarea>
      <label for="review-identity">
        <input type="checkbox" id="review-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Bewertung abgeben</button>
    </form>
    <!-- Der "Zurück zur Seite" Button als Pfeil -->
    <button id="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 7l-5 5 5 5V7z"/>
      </svg>
      Zurück
    </button>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const reviewForm = document.getElementById('review-form');
    const reviewCategorySelect = document.getElementById('review-category');
    const reviewSubcategorySelect = document.getElementById('review-subcategory');
    const reviewSubcategoryLabel = document.getElementById('review-subcategory-label');
    const reviewMessageInput = document.getElementById('review-message');
    const reviewIdentityCheckbox = document.getElementById('review-identity');
    const backButton = document.getElementById('back-button');

    reviewCategorySelect.addEventListener('change', () => {
      const selectedCategory = reviewCategorySelect.value;

      if (selectedCategory === 'Bibliothek') {
        reviewSubcategoryLabel.style.display = 'block';
        reviewSubcategorySelect.style.display = 'block';
        reviewSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie einen Aspekt</option>
          <option value="Räumlichkeiten">Räumlichkeiten</option>
          <option value="Benutzerservice">Benutzerservice</option>
          <option value="Medienangebot">Medienangebot</option>
        `;
      } else if (selectedCategory === 'Messe') {
        reviewSubcategoryLabel.style.display = 'block';
        reviewSubcategorySelect.style.display = 'block';
        reviewSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie einen Aspekt</option>
          <option value="Veranstaltung">Veranstaltung</option>
          <option value="Stände">Stände</option>
          <option value="Organisation">Organisation</option>
        `;
      } else if (selectedCategory === 'Lehrsystem') {
        reviewSubcategoryLabel.style.display = 'block';
        reviewSubcategorySelect.style.display = 'block';
        reviewSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie einen Aspekt</option>
          <option value="Kursstruktur">Kursstruktur</option>
          <option value="Lehrmaterialien">Lehrmaterialien</option>
          <option value="Online-Ressourcen">Online-Ressourcen</option>
        `;
      } else if (selectedCategory === 'Vorlesungen') {
        reviewSubcategoryLabel.style.display = 'block';
        reviewSubcategorySelect.style.display = 'block';
        reviewSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein Thema</option>
          <option value="Vorlesungsthemen">Vorlesungsthemen</option>
          <option value="Dozenten">Dozenten</option>
          <option value="Vorlesungsunterlagen">Vorlesungsunterlagen</option>
          <option value="Prüfungen">Prüfungen</option>
        `;
      } else if (selectedCategory === 'Professoren') {
        reviewSubcategoryLabel.style.display = 'block';
        reviewSubcategorySelect.style.display = 'block';
        reviewSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie einen Aspekt</option>
          <option value="Unterrichtsqualität">Unterrichtsqualität</option>
          <option value="Verfügbarkeit">Verfügbarkeit</option>
          <option value="Feedback und Unterstützung">Feedback und Unterstützung</option>
        `;
      } else if (selectedCategory === 'Hochschulräume') {
        reviewSubcategoryLabel.style.display = 'block';
        reviewSubcategorySelect.style.display = 'block';
        reviewSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie einen Aspekt</option>
          <option value="Klassenzimmer">Klassenzimmer</option>
          <option value="Labore">Labore</option>
          <option value="Studierzimmer">Studierzimmer</option>
          <option value="Campus">Campus</option>
        `;
      } else if (selectedCategory === 'Sonstiges') {
        reviewSubcategoryLabel.style.display = 'none';
        reviewSubcategorySelect.style.display = 'none';
        reviewSubcategorySelect.innerHTML = '';
      }
    });

    reviewForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const category = reviewCategorySelect.value;
      const subcategory = reviewSubcategorySelect.value || '';
      const message = reviewMessageInput.value;
      const isIdentified = reviewIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let title = category;
      if (category !== 'Sonstiges' && subcategory) {
        title += `: ${subcategory}`;
      }

      let reviewMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      reviewMessages.push({
        id: Date.now(),
        type: 'Bewertung',
        title,
        message,
        username,
        replies: []
      });
      localStorage.setItem('messages', JSON.stringify(reviewMessages));
      reviewMessageInput.value = '';
      reviewCategorySelect.value = '';
      reviewSubcategorySelect.innerHTML = '';
      reviewSubcategoryLabel.style.display = 'none';
      reviewSubcategorySelect.style.display = 'none';
      alert('Bewertung abgegeben!');
    });

    // Zurück-Button Logik
    backButton.addEventListener('click', () => {
      window.history.back();  // Gehe zur vorherigen Seite
    });
  });
</script>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    background: #e0d9d2;
    border-radius: 10px;
    color: #0f0e0e;
    text-align: center;
    position: relative;  /* Wichtig für die Positionierung des "Zurück"-Buttons */
  }

  h1 {
    margin-bottom: 3rem;
    font-size: 28px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  select,
  textarea {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid #0a0202;
    background: #e9e2e2;
    color: #110505;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, rgb(46 111 24), rgb(168 255 234 / 0%));
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  button:hover {
    background: #c05;
    transform: translateY(-2px);
  }

  /* Stil für den "Zurück" Button mit Pfeil */
  #back-button {
    position: absolute;  /* Positionierung innerhalb von "main" */
    bottom: -0.7rem;        /* Abstand vom unteren Rand */
    right: 0;          /* Abstand vom rechten Rand */
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(to right, rgb(231 238 231), rgb(13 6 6));
    color: hsl(0deg 7% 3%);
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  #back-button:hover {
    background: rgb(145 190 130);
    transform: translateY(-2px);
  }

  /* Stil für das Pfeil-SVG */
  #back-button svg {
    fill: currentcolor;  /* Erbt die Textfarbe des Buttons */
  }
</style>
