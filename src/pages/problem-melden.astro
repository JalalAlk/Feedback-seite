---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Problem melden" description="Melden Sie hier Probleme zu Ihrer Lernerfahrung.">
  <main>
    <h1>Problem melden</h1>
    <form id="problem-form">
      <!-- Auswahlfeld für die Kategorie -->
      <label for="problem-category">Kategorie:</label>
      <select id="problem-category" required>
        <option value="" disabled selected>Bitte wählen Sie eine Kategorie</option>
        <option value="Technisches Problem">Technisches Problem</option>
        <option value="Inhaltliches Problem">Inhaltliches Problem</option>
      </select>
      <label for="problem-subcategory" id="problem-subcategory-label" style="display: none;">Kurs-Thema:</label>
      <select id="problem-subcategory" style="display: none;" required>
        <!-- Optionen für Sub-Kategorien für Kurse werden hier dynamisch hinzugefügt -->
      </select>
      <label for="problem-message">Ihre Nachricht:</label>
      <textarea id="problem-message" rows="5" placeholder="Ihr Problem" required></textarea>
      <label for="problem-identity">
        <input type="checkbox" id="problem-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Problem melden</button>
    </form>
    <!-- Der "Zurück zur Seite" Button als Pfeil -->
    <button id="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 7l-5 5 5 5V7z"/>
      </svg>
      Zurück
    </button>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const problemForm = document.getElementById('problem-form');
    const problemCategorySelect = document.getElementById('problem-category');
    const problemSubcategorySelect = document.getElementById('problem-subcategory');
    const problemSubcategoryLabel = document.getElementById('problem-subcategory-label');
    const problemMessageInput = document.getElementById('problem-message');
    const problemIdentityCheckbox = document.getElementById('problem-identity');
    const backButton = document.getElementById('back-button');

    problemCategorySelect.addEventListener('change', () => {
      const selectedCategory = problemCategorySelect.value;

      if (selectedCategory === 'Technisches Problem') {
        problemSubcategoryLabel.style.display = 'block';
        problemSubcategorySelect.style.display = 'block';
        problemSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein technisches Problem</option>
          <option value="Website funktioniert nicht">Website funktioniert nicht</option>
          <option value="Fehler bei der Anmeldung">Fehler bei der Anmeldung</option>
          <option value="Sonstiges technisches Problem">Sonstiges technisches Problem</option>
        `;
      } else if (selectedCategory === 'Inhaltliches Problem') {
        problemSubcategoryLabel.style.display = 'block';
        problemSubcategorySelect.style.display = 'block';
        problemSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein inhaltliches Problem</option>
          <option value="Falsche Informationen">Falsche Informationen</option>
          <option value="Unklare Erklärungen">Unklare Erklärungen</option>
          <option value="Sonstiges inhaltliches Problem">Sonstiges inhaltliches Problem</option>
        `;
      } else {
        problemSubcategoryLabel.style.display = 'none';
        problemSubcategorySelect.style.display = 'none';
        problemSubcategorySelect.innerHTML = '';
      }
    });

    problemForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const category = problemCategorySelect.value;
      const subcategory = problemSubcategorySelect.value || '';
      const message = problemMessageInput.value;
      const isIdentified = problemIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let title = category;
      if (subcategory) {
        title += `: ${subcategory}`;
      }

      let problemMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      problemMessages.push({
        id: Date.now(),
        type: 'Problem',
        title,
        message,
        username,
        replies: []
      });
      localStorage.setItem('messages', JSON.stringify(problemMessages));
      problemMessageInput.value = '';
      problemCategorySelect.value = '';
      problemSubcategorySelect.innerHTML = '';
      problemSubcategoryLabel.style.display = 'none';
      problemSubcategorySelect.style.display = 'none';
      alert('Problem wurde gemeldet!');
    });

    // Zurück-Button Logik
    backButton.addEventListener('click', () => {
      window.history.back();  // Gehe zur vorherigen Seite
    });
  });
</script>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    background: #e0d9d2;
    border-radius: 10px;
    color: #0f0e0e;
    text-align: center;
    position: relative;  /* Wichtig für die Positionierung des "Zurück"-Buttons */
  }

  h1 {
    margin-bottom: 3rem;
    font-size: 28px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  select,
  textarea {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid #0a0202;
    background: #e9e2e2;
    color: #110505;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, rgb(46 111 24), rgb(168 255 234 / 0%));
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  button:hover {
    background: #c05;
    transform: translateY(-2px);
  }

  /* Stil für den "Zurück" Button mit Pfeil */
  #back-button {
    position: absolute;  /* Positionierung innerhalb von "main" */
    bottom: -0.7rem;        /* Abstand vom unteren Rand */
    right: 0;         /* Abstand vom rechten Rand */
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(to right, rgb(231 238 231), rgb(13 6 6));
    color: hsl(0deg 7% 3%);
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  #back-button:hover {
    background: rgb(145 190 130);
    transform: translateY(-2px);
  }

  /* Stil für das Pfeil-SVG */
  #back-button svg {
    fill: currentcolor;  /* Erbt die Textfarbe des Buttons */
  }
</style>
