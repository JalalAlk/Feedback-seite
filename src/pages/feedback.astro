---

import Layout from '../layouts/Layout.astro';
---

<Layout title="Feedback" description="Geben Sie hier Ihr Feedback zu Ihrer Lernerfahrung ab.">
  <main>
    <h1>Feedback geben</h1>
    <form id="feedback-form">
      <!-- Auswahlfeld für die Kategorie -->
      <label for="feedback-category">Kategorie:</label>
      <select id="feedback-category" required>
        <option value="" disabled selected>Bitte wählen Sie eine Kategorie</option>
        <option value="Kurse">Kurse</option>
      </select>
      <label for="feedback-subcategory" id="feedback-subcategory-label" style="display: none;">Kurs-Thema:</label>
      <select id="feedback-subcategory" style="display: none;" required>
        <!-- Optionen für Sub-Kategorien für Kurse werden hier dynamisch hinzugefügt -->
      </select>
      <label for="feedback-message">Ihre Nachricht:</label>
      <textarea id="feedback-message" rows="5" placeholder="Ihr Feedback" required></textarea>
      <label for="feedback-identity">
        <input type="checkbox" id="feedback-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Feedback senden</button>
    </form>
    <!-- Der "Zurück zur Seite" Button als Pfeil -->
    <button id="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 7l-5 5 5 5V7z"/>
      </svg>
      Zurück
    </button>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const feedbackForm = document.getElementById('feedback-form');
    const feedbackCategorySelect = document.getElementById('feedback-category');
    const feedbackSubcategorySelect = document.getElementById('feedback-subcategory');
    const feedbackSubcategoryLabel = document.getElementById('feedback-subcategory-label');
    const feedbackMessageInput = document.getElementById('feedback-message');
    const feedbackIdentityCheckbox = document.getElementById('feedback-identity');
    const backButton = document.getElementById('back-button');

    feedbackCategorySelect.addEventListener('change', () => {
      const selectedCategory = feedbackCategorySelect.value;

      if (selectedCategory === 'Kurse') {
        feedbackSubcategoryLabel.style.display = 'block';
        feedbackSubcategorySelect.style.display = 'block';
        feedbackSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein Kurs-Thema</option>
          <option value="Mathematik 3">Mathematik 3</option>
          <option value="Programmierung 4">Programmierung 4</option>
          <option value="UserExperience">UserExperience</option>
        `;
      } else {
        feedbackSubcategoryLabel.style.display = 'none';
        feedbackSubcategorySelect.style.display = 'none';
        feedbackSubcategorySelect.innerHTML = '';
      }
    });

    feedbackForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const category = feedbackCategorySelect.value;
      const subcategory = feedbackSubcategorySelect.value || '';
      const message = feedbackMessageInput.value;
      const isIdentified = feedbackIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let title = category;
      if (category === 'Kurse' && subcategory) {
        title += `: ${subcategory}`;
      }

      let feedbackMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      feedbackMessages.push({
        id: Date.now(),
        type: 'Feedback',
        title,
        message,
        username,
        replies: []
      });
      localStorage.setItem('messages', JSON.stringify(feedbackMessages));
      feedbackMessageInput.value = '';
      feedbackCategorySelect.value = '';
      feedbackSubcategorySelect.innerHTML = '';
      feedbackSubcategoryLabel.style.display = 'none';
      feedbackSubcategorySelect.style.display = 'none';
      alert('Feedback gesendet!');
    });

    // Zurück-Button Logik
    backButton.addEventListener('click', () => {
      window.history.back();  // Gehe zur vorherigen Seite
    });
  });
</script>
<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 800px;
    background: #fff;
    border-radius: 15px;
    color: #333;
    text-align: center;
    box-shadow: 0 4px 8px rgb(0 0 0 / 10%);
    position: relative;
    font-family: 'Helvetica Neue', sans-serif;
  }

  h1 {
    margin-bottom: 2rem;
    font-size: 32px;
    font-weight: bold;
    color: #333;
    border-bottom: 2px solid #eee;
    padding-bottom: 1rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  select,
  textarea {
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid #ccc;
    background: #f9f9f9;
    color: #333;
    font-size: 16px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  select:focus,
  textarea:focus {
    border-color: #2e6f18;
    box-shadow: 0 0 5px rgb(46 111 24 / 50%);
    outline: none;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, #2e6f18, #a8ffea);
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
    font-size: 16px;
    font-weight: bold;
  }

  button:hover {
    background: #2e6f18;
    transform: translateY(-2px);
  }

  #back-button {
    position: absolute;
    bottom: -0.7rem;
    right: 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(to right, #e7eee7, #0d0606);
    color: #333;
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
    font-size: 14px;
  }

  #back-button:hover {
    background: #91be82;
    transform: translateY(-2px);
  }

  #back-button svg {
    fill: currentcolor;
  }
</style>


